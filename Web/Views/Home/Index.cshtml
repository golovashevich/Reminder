@model Web.Models.PhoneModel
@using Resources	
@{
	ViewBag.Title = Home.IndexTitle;
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			@Html.ActionLink(Home.IndexHeader, "Index", "Home", new { @class = "brand" })
		</div>
	</div>
</div>

<div id="landing">
	<div class="container">
		<div class="row">
			<div class="span5">
				<h1>@Home.IndexFixNoShows</h1>
				<p>
					@using (Html.BeginForm("Try", "Home", FormMethod.Post)) {

						@: Phone: @Html.TextBoxFor(m => m.Phone)
						@Html.ValidationMessageFor(m => m.Phone)
						<br />
						@Html.TextBoxFor(m => m.Text)
						@Html.ValidationMessageFor(m => m.Text)
						@: <button type="submit" class="btn btn-primary btn-action">@Home.IndexTry</button>
					}
				</p>
				@if (!String.IsNullOrEmpty(ViewBag.ResultMessage)) {
					@: <h2>@ViewBag.ResultMessage</h2>
				}

			</div>
			<div class="span7">
				<img src="/Images/mail.jpg" alt="SesOpenRate">
			</div>
		</div>

	</div>
</div>
